<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <EditText
        android:id="@+id/register_new_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/register_new_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_new_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/register_new_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_new_lastname"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView6register"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:layout_toStartOf="@+id/register_new_name"
        android:layout_toLeftOf="@+id/register_new_name"
        android:text="First Name"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView7register"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_below="@+id/textView6register"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_toStartOf="@+id/register_new_lastname"
        android:layout_toLeftOf="@+id/register_new_lastname"
        android:text="Last Name"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView8register"
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView7register"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_toStartOf="@+id/register_new_email"
        android:layout_toLeftOf="@+id/register_new_email"
        android:text="Email"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_register_new"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_password_register"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="Add" />

    <TextView
        android:id="@+id/tv_password_register"
        android:layout_width="146dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView8register"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_toStartOf="@+id/register_new_password"
        android:layout_toLeftOf="@+id/register_new_password"
        android:text="Password"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/register_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_new_email"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:ems="10"
        android:inputType="textPassword" />
</RelativeLayout>