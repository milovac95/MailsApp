<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MailSingleActivity">

    <ImageView
        android:id="@+id/single_received_mail_image"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="142dp"
        android:layout_marginEnd="146dp"
        android:layout_marginRight="146dp"
        android:src="@drawable/ic_baseline_account_circle_24" />



    <TextView
        android:id="@+id/single_received_email_datetime"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/single_received_email_subject"
        android:layout_marginTop="18dp"
        android:text="Email Datetime"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/single_received_email_content"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_below="@+id/single_received_email_datetime"
        android:layout_marginTop="16dp"
        android:text="Email Content"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/single_received_email_from"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@+id/single_received_mail_image"
        android:layout_marginTop="9dp"
        android:text="Email From"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/single_received_email_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_received_email_from"
        android:layout_marginTop="15dp"
        android:text="Email Subject"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_reply"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_received_email_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Reply" />

    <Button
        android:id="@+id/btn_forward_mail"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_received_email_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Forward" />

    <Button
        android:id="@+id/btn_delete_single_mail"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_forward_mail"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Delete" />

</RelativeLayout>