<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactSingle">

    <ImageView
        android:id="@+id/contact_image"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="142dp"
        android:layout_marginEnd="146dp"
        android:layout_marginRight="146dp"
        android:src="@drawable/ic_baseline_account_circle_24" />


    <TextView
        android:id="@+id/contact_single_name"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@+id/contact_image"
        android:layout_marginTop="9dp"
        android:text="John Doe"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contact_single_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_single_name"
        android:layout_marginTop="15dp"
        android:text="johdoe@mail.com"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_delete_single_contact"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_edit_single_contact"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="22dp"
        android:text="Delete" />

    <Button
        android:id="@+id/btn_edit_single_contact"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_single_email"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="29dp"
        android:text="Edit" />

    <Button
        android:id="@+id/btn_reply_single_contact"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_delete_single_contact"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="24dp"
        android:text="Send Mail" />
</RelativeLayout>